<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox stylesheets="@/seedu/addressbook/ui/LightTheme.css" alignment="center" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="seedu.addressbook.ui.MainWindow">

    <children>

        <TextArea fx:id="outputConsole" editable="false" wrapText="true" VBox.vgrow="ALWAYS">
        </TextArea>

        <HBox alignment="center">
		
        	<children>
        	
        		<TextField fx:id="commandInput" onAction="#onCommand" VBox.vgrow="NEVER">
        		</TextField>
        
				<Button fx:id="clickCommandInput" onAction="#onCommand">
			        Enter Command
			    </Button>
			    <Button fx:id="resetCommandInput" onAction="#onResetCommand">
			        Clear Command
			    </Button>
		    </children>
		</HBox>
        
    </children>
    
    
	
    
</VBox>
